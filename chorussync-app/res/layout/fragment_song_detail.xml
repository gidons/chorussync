<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SongDetailFragment" 
    >
	<TextView
	    android:id="@+id/song_detail_title" 
	    style="?android:attr/textAppearanceLarge"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:padding="16dp"
	    android:textIsSelectable="true"
	    />
	<TextView 
	    android:id="@+id/song_detail_download_status"
	    style="?android:attr/textAppearanceMedium"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/song_detail_title"
	    />
	<Button
	    android:text="@string/button_download"
	    android:layout_below="@id/song_detail_download_status"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:id="@+id/song_detail_download"
	    />

	<Button
	    android:id="@+id/song_detail_button_mode"
	    android:text="@string/playMode"
	    android:contentDescription="@string/playMode"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/song_detail_button_play"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="10dp"
	    />
	
	<ImageButton
	    android:id="@id/song_detail_button_play"
	    android:contentDescription="@string/play"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="28dp"
	    android:src="@drawable/ic_action_play" />

</RelativeLayout>